{
  "name": "tgs-converter-high-performance",
  "version": "2.0.0",
  "description": "Ultra-fast TGS to PNG/WebP converter with rlottie-wasm and worker threads",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "cluster": "node cluster.js",
    "pm2": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs tgs-converter",
    "pm2:monit": "pm2 monit",
    "benchmark": "node benchmark.js",
    "docker:build": "docker build -t tgs-converter .",
    "docker:run": "docker run -p 3000:3000 --cpus=4 -m 2g tgs-converter"
  },
  "dependencies": {
    "fastify": "^4.26.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/cors": "^9.0.1",
    "pako": "^2.1.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "autocannon": "^7.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
